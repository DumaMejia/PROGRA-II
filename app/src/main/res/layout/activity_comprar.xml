<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/txtnTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:hint="Numero de la tarjeta" />

            <EditText
                android:id="@+id/txtnomtar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnTarjeta"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:hint="nombre tal como aparece en la tarjeta" />



            <EditText
                android:id="@+id/txtfecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtnomtar"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:hint="MM/AA" />

            <EditText
                android:id="@+id/txtcodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtfecha"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:hint="secure code" />

            <ImageView
                android:id="@+id/imVisa"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_below="@id/txtcodigo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginStart="106dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="103dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/ic_mas" />

            <ImageView
                android:id="@+id/imgMastercarrd"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_below="@id/imVisa"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginStart="106dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="103dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/ic_visa" />

            <Button
                android:id="@+id/btnObtener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgMastercarrd"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="validar compra"
                app:backgroundTint="#FF5722" />


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnregresarver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/abc_vector_test"
        app:backgroundTint="#FF5722" />

</RelativeLayout>