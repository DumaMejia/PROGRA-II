                        android:layout_marginTop="20dp"
                        android:text="Calcular" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tabVol"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblDeV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DE: " />

                    <Spinner
                        android:id="@+id/cboDeV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/conversorVolumen" />

                    <TextView
                        android:id="@+id/lblAV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboDeV"
                        android:layout_marginTop="20dp"
                        android:text="A: " />

                    <Spinner
                        android:id="@+id/cboAV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboDeV"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:entries="@array/conversorVolumen" />

                    <EditText
                        android:id="@+id/txtcantidadV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboAV"
                        android:layout_marginTop="20dp"
                        android:hint="Cantidad" />

                    <TextView
                        android:id="@+id/lblRespuestaV"
                        android:layout_width="match_parent"
