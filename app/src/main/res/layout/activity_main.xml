                        android:layout_marginTop="20dp"
                        android:text="A: " />

                    <Spinner
                        android:id="@+id/cboAaL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboDeAl"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
